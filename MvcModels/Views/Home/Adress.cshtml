@model List<AdressSummary>

@{ Layout = "_Layout";
    ViewBag.Title = "Adress";}

    @if (Model.Count == 0)
     {
        <form asp-action="Adress" method="post">
                @for (int i = 0; i < 3; i++)
                {   <fieldset class="form-group">
                        <label>Adres @(i + 1):</label>
                        <div class="form-group">
                            <label>Miasto:</label>
                            <input name="[@i].City" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label>Kraj:</label>
                            <input name="[@i].Country" class="form-control" />
                        </div>
                    </fieldset>
                }
                <button type="submit" class="btn btn-primary">Wyślij</button>
        </form>
    }
    else
    {
        <table class="table table-sm table-bordered table-striped">
            <tr><th>Miasto</th><th>Kraj</th></tr>
            @foreach (var a in Model)
            {
                <tr><th>@a.City</th><th>@a.Country</th></tr>
            }
        </table>
        <a asp-action="Adress" class="btn btn-primary">Wróć</a>
    }