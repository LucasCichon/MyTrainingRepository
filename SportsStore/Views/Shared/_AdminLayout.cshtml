<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" asp-href-include="twitter-bootstrap/css/bootstrap.css"/>
    <title>@ViewBag.Title</title>
    <style>
        .input-validation-error{border-color: red; background-color: #fee;}
    </style>
    <script src="~/jQuery-Validation-Engine/jquery-1.8.2.min.js"></script>
    <script src="~/jQuery-Validation-Engine/jquery.validationEngine.min.js"></script>

</head>
<body class="m-1 p-1">
    <div class="bg-info p-2 row">
        <div class="col">
            <h4>@ViewBag.Title</h4>
        </div>
        <div class="col-2">
            <a class="btn btn-sm btn-primary"
               asp-action="Logout" asp-controller="Account">Wyloguj</a>
        </div>
    </div>
    @if (TempData["message"] != null)
    {
        <div class="alert alert-success mt-1">@TempData["message"]</div>
    }
        @RenderBody()
    
</body>
</html>
