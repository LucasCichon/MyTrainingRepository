@model PartyInvitesCode.Models.GuestResponse

@{ 
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width = device-width" />
    <title>RSVP</title>
    <link rel="stylesheet" href="~/lib/twitter-bootstrap/css/bootstrap.css" />
</head>
<body>
    <div class="m-2">
        <div class="text-center"><h4>RSVP</h4></div>
        <form class="p-1" asp-action="RsvpForm" method="post">
            <div class="form-group">
                <label asp-for="Name">Imię i nazwisko:</label>
                <input class="form-control" asp-for="Name" />
            </div>
            <div class="form-group">
                <label asp-for="Email">e-mail:</label>
                <input class="form-control" asp-for="Email" />
            </div>
            <div class="form-grop">
                <label asp-for="Phone">Telefon:</label>
                <input class="form-control" asp-for="Phone" />
            </div>
            <div class="form-grop">
                <label>Czy przyjdziesz na przyjęcie?</label>
                <select class="form-control" asp-for="WillAttend">
                    <option value="">Wybierz opcję</option>
                    <option value="true">Tak przyjdę</option>
                    <option value="false">Nie, nie przyjdę</option>
                </select>
            </div>
            <div class="text-center">
                <button class="btn btn-primary" type="submit">Wyślij RSVP</button>
            </div>
        </form>
    </div>
</body>
</html>