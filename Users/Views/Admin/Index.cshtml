@model IEnumerable<AppUser>

<div class="text-danger" asp-validation-summary="ModelOnly"></div>
<div class="bg-primary m-1 p-1 text-white"><h4>Konta użytkowników</h4></div>

<table class="table table-sm table-bordered">
    <tr><th>ID</th><th>Nazwa użytkownika</th><th>Adres e-mail</th></tr>
    @if (Model.Count() == 0){
    <tr><td colspan="3" class="text-center">Brak kont użytkowników</td></tr>
    }
    else
    {
        @foreach(var m in Model)
        {
            <tr>
                <th>@m.Id</th><th>@m.UserName</th><th>@m.Email</th>
                <td>
                    <form asp-action="Delete" asp-route-id="@m.Id" method="post">
                        <a class="btn btn-sm btn-primary"asp-action="Edit" asp-route-id="@m.Id">Edytuj</a>
                        <button type="submit" class="btn btn-sm btn-primary">Usuń</button>
                    </form>
                </td>
            </tr>
        }
    }
</table>

<a class="btn btn-primary" asp-action="Create">Dodaj użytkownika</a>