@model IEnumerable<Reservation>

@{ Layout = "_Layout";}

<form method="post" asp-action="AddReservation">
    <div class="form-group">
        <label for="ClientName">Imię:</label>
        <input class="form-control" name="ClientName" />
    </div>
    <div class="form-group">
        <label for="Location">Lokalizacja:</label>
        <input class="form-control" name="Location" />
    </div>
    <div class="text-center panel-body">
        <button class="btn btn-primary btn-sm" type="submit">Dodaj</button>
    </div>
</form>

<table class="table table-striped table-bordered table-sm m-2">
    <thead>
        <tr><th>ID</th><th>Klient</th><th>Lokalizacja</th></tr>
    </thead>
    <tbody>
        @foreach(Reservation res in Model)
        {
            <tr>
                <td>@res.ReservationId</td>
                <td>@res.ClientName</td>
                <td>@res.Location</td>
            </tr>
        }
    </tbody>
</table>

