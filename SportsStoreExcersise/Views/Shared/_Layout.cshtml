<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet"
          asp-href-include="lib/twitter-bootstrap/css/bootstrap.css"
          asp-href-exclude="**/*-reboot*,**/*-grid*"/>
    <link rel="stylesheet" asp-href-include="font-awesome/css/all.css" />
    <title>SportsStoreExcersise</title>
</head>
<body>
    <div class="navbar navbar-inverse bg-light" role="navigation">
        <div class="row">
        <a class="navbar-brand" href="#">Sklep Sportowy</a>
            <div class="col-4 text-right">
                @await Component.InvokeAsync("CartSummary")
            </div>
        </div>
    </div>
    <div class="row m-1 p-1">
        <div id="categories" class="col-3">
            @await Component.InvokeAsync("NavigationMenu")
        </div>
        <div class="col-9">
            @RenderBody()
        </div>
    </div>
</body>
</html>
