@model CartIndexViewModel

<h2>Twój koszyk</h2>
<table class="table table-sm table-striped table-bordered">
    <thead>
        <tr>
            <th>Ilość</th>
            <th>Produkt</th>
            <th class="text-right">Cena</th>
            <th class="text-right">Wartość</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var c in Model.Cart.Lines)
        {
            <tr>
                <td class="text-center">@c.Quantity</td>
                <td class="text-left">@c.Product.Name</td>
                <td class="text-right">@c.Product.Price.ToString("c")</td>
                <td class="text-right">@((c.Product.Price*c.Quantity).ToString("c"))</td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="3" class="text-center">Razem:</td>
            <td class="text-center">@Model.Cart.ComputeTotalValue().ToString("c")</td>
        </tr>
    </tfoot>
</table>

<div class="text-center">
    <a class="btn btn-secondary" href="@Model.ReturnUrl">Kontynuuj zakupy</a>
</div>